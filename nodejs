table in car
import React from "react";

function VehicleCards() {
  const vehicles = [
    { model: "Model S", manufacturer: "Tesla", year: 2020, fuel: "Electric" },
    { model: "Civic", manufacturer: "Honda", year: 2018, fuel: "Petrol" },
    { model: "Corolla", manufacturer: "Toyota", year: 2019, fuel: "Petrol" },
    { model: "Mustang", manufacturer: "Ford", year: 2021, fuel: "Petrol" },
    { model: "Leaf", manufacturer: "Nissan", year: 2020, fuel: "Electric" },
  ];

  const containerStyle = {
    display: "flex",
    justifyContent: "space-between",
    padding: 20,
  };

  const cardStyle = {
    border: "1px solid #ccc",
    borderRadius: 8,
    padding: 15,
    width: "18%",
    boxSizing: "border-box",
    boxShadow: "2px 2px 5px rgba(0,0,0,0.1)",
    fontFamily: "Arial, sans-serif",
  };

  const titleStyle = {
    fontWeight: "bold",
    marginBottom: 8,
    fontSize: 18,
  };

  return (
    <div style={containerStyle}>
      {vehicles.map((v, index) => (
        <div key={index} style={cardStyle}>
          <div style={titleStyle}>{v.model}</div>
          <div>Manufacturer: {v.manufacturer}</div>
          <div>Year: {v.year}</div>
          <div>Fuel: {v.fuel}</div>
        </div>
      ))}
    </div>
  );
}

export default VehicleCards;
