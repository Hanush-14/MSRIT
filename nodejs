restaurant
import React, { Component } from "react";

class RestaurantList extends Component {
  state = {
    restaurants: [
      {
        id: 1,
        name: "Pizza Place",
        menu: [
          { id: 101, item: "Margherita" },
          { id: 102, item: "Pepperoni" },
        ],
      },
      {
        id: 2,
        name: "Sushi Bar",
        menu: [
          { id: 201, item: "California Roll" },
          { id: 202, item: "Spicy Tuna Roll" },
        ],
      },
      {
        id: 3,
        name: "Burger Joint",
        menu: [
          { id: 301, item: "Cheeseburger" },
          { id: 302, item: "Veggie Burger" },
        ],
      },
    ],
  };

  render() {
    return (
      <div style={{ fontFamily: "Arial, sans-serif", maxWidth: 400, margin: "20px auto" }}>
        <h2>Restaurants and Menus</h2>
        <ul>
          {this.state.restaurants.map((restaurant) => (
            <li key={restaurant.id} style={{ marginBottom: 15 }}>
              <strong>{restaurant.name}</strong>
              <ul>
                {restaurant.menu.map((menuItem) => (
                  <li key={menuItem.id}>{menuItem.item}</li>
                ))}
              </ul>
            </li>
          ))}
        </ul>
      </div>
    );
  }
}

export default RestaurantList;
