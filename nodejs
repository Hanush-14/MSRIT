textcount
import React, { useState } from 'react';

function App() {
  const [text, setText] = useState('');

  const clearInput = () => setText('');

  return (
    <div style={{ padding: 20, fontFamily: 'Arial' }}>
      <input
        value={text}
        onChange={(e) => setText(e.target.value)}
        placeholder="Type something"
        style={{ padding: 8, width: '100%', marginBottom: 10 }}
      />
      <div>Character Count: {text.length}</div>
      <button onClick={clearInput} style={{ marginTop: 10 }}>
        Clear
      </button>
    </div>
  );
}

export default App;
-----
prop validation
import React from 'react';
import PropTypes from 'prop-types';

class App extends React.Component {
  render() {
    const { propArray, propBool, propFunc, propNumber, propString } = this.props;
    return (
      <div>
        <h2>Simple ReactJS Props validation example</h2>
        <table border="1" cellPadding="5">
          <thead>
            <tr>
              <th>Type</th>
              <th>Value</th>
              <th>Valid</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Array</td>
              <td>{String(propArray)}</td>
              <td>{Array.isArray(propArray) ? "true" : "false"}</td>
            </tr>
            <tr>
              <td>Boolean</td>
              <td>{String(propBool)}</td>
              <td>{typeof propBool === 'boolean' ? "true" : "false"}</td>
            </tr>
            <tr>
              <td>Function</td>
              <td>{typeof propFunc === 'function' ? propFunc(5) : String(propFunc)}</td>
              <td>{typeof propFunc === 'function' ? "true" : "false"}</td>
            </tr>
            <tr>
              <td>Number</td>
              <td>{propNumber}</td>
              <td>{typeof propNumber === 'number' ? "true" : "false"}</td>
            </tr>
            <tr>
              <td>String</td>
              <td>{propString}</td>
              <td>{typeof propString === 'string' ? "true" : "false"}</td>
            </tr>
          </tbody>
        </table>
      </div>
    );
  }
}

App.propTypes = {
  propArray: PropTypes.array.isRequired,
  propBool: PropTypes.bool.isRequired,
  propFunc: PropTypes.func,
  propNumber: PropTypes.number,
  propString: PropTypes.string,
};

App.defaultProps = {
  propArray: [1, 2, 3],
  propBool: true,
  propFunc: x => x * 10,
  propNumber: 42,
  propString: "Hello",
};

export default App;
